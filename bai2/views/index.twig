{% extends "layout.twig" %}

{% block content %}

  <h2>List of Users</h2>
  <button type="button" class =""><a href="index.php?action=add">ADD</a></button>
  <table class= "table">
    <thead>
      <tr class="">
        <th class="">ID</th>
        <th class="" >Name</th>
        <th class="" >Email</th>
        <th class="" >Action</th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
        <tr class="" >
          <td class="" >{{ user.id }}</td>
          <td class="" >{{ user.name }}</td>
          <td class="" >{{ user.email }}</td>
          <td class=" " >
            <button class=" "><a href="index.php?action=edit&id={{ user.id }}">Edit</a></button>
            <button class=" " ><a href="index.php?action=delete&id={{ user.id }}" onclick="return confirm('Are you sure?')">Delete</a></button>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  
{% endblock %}